@{
    ViewBag.Title = "admin";
    ViewBag.Sub = "member";

    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section stMain {
    <script type="text/javascript" src="/Scripts/admin/_Memberwrite.js"></script>        
    <div class="st-main">
        <div class="st-header">
            <div class="fluid-cols">
                <div class="min-col">
                    <div class="st-header__menu">
                        <button class="btn st-sidebar__toggle"><i class="fa fa-bars"></i></button>
                    </div>
                </div>
                <div class="expand-col text-ellipsis">
                    <div class="st-header__title"><span>관리자 정보</span></div>
                </div>
            </div>
        </div>
						
        <div class="st-content mb50 max_width">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        

                        @{
                            if (Model == null)
                            {
                                <div class="st-panel">
                                    <div class="st-panel__cont">       
                                        <div class="st-panel__content ">
                                            <form action="/Admin/MemberModify" id="insert_form" name="insert_form" method="post" enctype="multipart/form-data" >
                                                <input type="hidden" id="memb_no" name="memb_no" value="">
                                                <input type="hidden" id="use_yn" name="use_yn" value="">
                                                <input type="hidden" id="del_flag" name="del_flag" value="">
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <div class="panel panel-default">
                                                            <div class="panel-heading">기본 정보 입력</div>
                                                                <!-- panel-body -->
                                                                <div class="panel-body">				
				                                                    <div class="form-group col-md-12">
					                                                    <div class="col-md-4 pd0">
						                                                    <label>아이디</label>							
							                                                    <span class="btn-group pull-right" role="group" aria-label="...">
								                                                    <a href="javascript:void(0);" type="button" class="btn btn-primary btn-xs" id="id_check"> 중복확인</a>
							                                                    </span>
							                                                    <input class="form-control" id="m_id" name="m_id" >
                                                                                <p id="error_id" style="color:red;" ></p>
											                            </div>
				                                                    </div>
				                                                    <div class="form-group col-md-12">
					                                                    <div class="col-md-4 pd0">
						                                                    <label>비밀번호</label>
						                                                    <input class="form-control" type="password" id="password" name="password">
						                                                    <p>비밀번호는 4~26자리, 대소문자 구분 합니다.</p>
					                                                    </div>
				                                                    </div>
				                                                    <div class="form-group col-md-12">
					                                                    <div class="col-md-3 pd0">
						                                                    <label>성명</label>
						                                                    <input class="form-control" type="text" id="name" name="name" value="">
					                                                    </div>
				                                                    </div>
                                                                    <div class="form-group col-md-12">
                                                                        <div class="col-md-6 pd0">
                                                                            <label>핸드폰</label>
                                                                            <div class="form-group input-group">
                                                                                <div class="input-group col-md-10">
                                                                                    <input type="text" class="form-control" id="mobile1" name="mobile1" value="">
                                                                                    <span class="input-group-addon no_bg px20 im_pd0">-</span>
                                                                                    <input type="text" class="form-control" id="mobile2" name="mobile2" value="">
                                                                                    <span class="input-group-addon no_bg px20 im_pd0">-</span>
                                                                                    <input type="text" class="form-control" id="mobile3" name="mobile3" value="">
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>							
                                                                </div>
                                                                <!-- /.panel-body -->
                                                            </div>
                                                            <!-- /.panel -->
                                                        </div>
                                                    </div>
                                                </form>
                                                <div class="mb20"></div>
                                                <!--	/.기본 레이아웃	-->
                                                <div class="row">
                                                    <div class="col-md-6 col-md-offset-3 paging">
                                                        <a href="javascript:void(0);" type="button" class="btn btn-primary _btn_reg"><i class="fa fa-pencil-square-o"></i> 등록</a>
                                                        @Html.Raw("&nbsp;")
                                                        @Html.Raw("&nbsp;")
                                                        <a href="@Url.Action("Member", "Admin")" type="button" class="btn btn-primary _btn_list"><i class="fa fa-th-list"></i> 목록</a>
                                                        @Html.Raw("&nbsp;")
                                                        @Html.Raw("&nbsp;")
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                foreach (var rowItem in Model)
                                {
                                    <div class="st-panel">
                                        <div class="st-panel__cont">       
                                            <div class="st-panel__content ">
                                                <form action="/Admin/MemberModify" id="insert_form" name="insert_form" method="post" enctype="multipart/form-data" >
                                                    <input type="hidden" id="memb_no" name="memb_no" value="@rowItem.MEMB_NO">
                                                    <input type="hidden" id="use_yn" name="use_yn" value="y">
                                                    <input type="hidden" id="del_flag" name="del_flag" value="">
                                                    <div class="row">
                                                        <div class="col-md-12">
                                                            <div class="panel panel-default">
                                                                <div class="panel-heading">기본 정보 입력</div>
                                                                    <!-- panel-body -->
                                                                    <div class="panel-body">				
				                                                        <div class="form-group col-md-12">
					                                                        <div class="col-md-4 pd0">
						                                                        <label>아이디</label>							
								                                                <p class="form-control-static">@Html.Raw(@rowItem.M_ID)</p>
											                                </div>
				                                                        </div>
				                                                        <div class="form-group col-md-12">
					                                                        <div class="col-md-4 pd0">
						                                                        <label>비밀번호</label>
						                                                        <input class="form-control" type="password" id="password" name="password">
						                                                        <p>비밀번호는 4~26자리, 대소문자 구분 합니다.</p>
                                                                                <p style="color:red">입력이 없으면 비밀번호는 변경되지 않습니다. </p>
					                                                        </div>
				                                                        </div>
				                                                        <div class="form-group col-md-12">
					                                                        <div class="col-md-3 pd0">
						                                                        <label>성명</label>
						                                                        <input class="form-control" type="text" id="name" name="name" value="@rowItem.NAME">
					                                                        </div>
				                                                        </div>
                                                                        <div class="form-group col-md-12">
                                                                            <div class="col-md-6 pd0">
                                                                                <label>핸드폰</label>
                                                                                <div class="form-group input-group">
                                                                                    <div class="input-group col-md-10">
                                                                                        <input type="text" class="form-control" id="mobile1" name="mobile1" value="@rowItem.MOBILE1">
                                                                                        <span class="input-group-addon no_bg px20 im_pd0">-</span>
                                                                                        <input type="text" class="form-control" id="mobile2" name="mobile2" value="@rowItem.MOBILE2">
                                                                                        <span class="input-group-addon no_bg px20 im_pd0">-</span>
                                                                                        <input type="text" class="form-control" id="mobile3" name="mobile3" value="@rowItem.MOBILE3">
                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                        </div>							
                                                                    </div>
                                                                    <!-- /.panel-body -->
                                                                </div>
                                                                <!-- /.panel -->
                                                            </div>
                                                        </div>
                                                    </form>
                                                    <div class="mb20"></div>
                                                    <!--	/.기본 레이아웃	-->
                                                    <div class="row">
                                                        <div class="col-md-6 col-md-offset-3 paging">
                                                            <a href="javascript:void(0);" type="button" class="btn btn-primary _btn_reg"><i class="fa fa-pencil-square-o"></i> 수정</a>
                                                            @Html.Raw("&nbsp;")
                                                            @Html.Raw("&nbsp;")
                                                            <a href="@Url.Action("Member", "Admin")" type="button" class="btn btn-primary _btn_list"><i class="fa fa-th-list"></i> 목록</a>
                                                            @Html.Raw("&nbsp;")
                                                            @Html.Raw("&nbsp;")
                                                            <a href="javascript:void(0);" type="button" class="btn btn-primary _btn_del" data-val="1" ><i class="fa fa-th-list"></i> 삭제</a>
		                                                    @Html.Raw("&nbsp;")
                                                            @Html.Raw("&nbsp;")
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>                                                   
                                }                                                                                 
                            }
                        }


                    </div>
                </div>
            </div>
        </div>			
        <div class="st-footer">
            <div class="copyright">
                Copyright(c) 관리자 모드. All right reserved. 
            </div>
        </div>	
    </div>
}
